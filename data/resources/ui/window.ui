<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>
  <requires lib="libadwaita" version="1.0"/>

  <template class="DBWindow" parent="AdwApplicationWindow">
    <property name="can-focus">True</property>
    <property name="title">DieBahn</property>
    <property name="default-height">800</property>
    <property name="default-width">1440</property>
    <property name="width-request">360</property>
    <property name="height-request">300</property>

    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 960sp</condition>
        <setter object="result_view" property="collapsed">True</setter>
      </object>
    </child>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 720sp</condition>
        <setter object="search_view" property="collapsed">True</setter>
        <setter object="result_view" property="collapsed">True</setter>
      </object>
    </child>

    <child>
      <object class="AdwNavigationSplitView" id="search_view">
        <property name="min-sidebar-width">300</property>
        <property name="max-sidebar-width">400</property>
        <property name="sidebar-width-fraction">0.25</property>
        <property name="sidebar">
          <object class="AdwNavigationPage">
            <property name="title" translatable="yes">Search</property>
            <child>
              <object class="AdwToolbarView">
                <child type="top">
                  <object class="AdwHeaderBar">
                    <property name="title-widget">
                      <object class="AdwWindowTitle">
                        <property name="title" translatable="yes">DieBahn</property>
                      </object>
                    </property>
                    <child>
                      <object class="GtkMenuButton">
                        <accessibility>
                          <property name="label" translatable="yes">Select Provider</property>
                        </accessibility>

                        <style>
                          <class name="window-menu-button-provider"/>
                        </style>

                        <property name="tooltip-text" translatable="yes">Select Provider</property>
                        <property name="always-show-arrow">true</property>
                        <property name="popover">
                          <object class="DBProviderPopover" id="provider_popover">
                            <property name="client" bind-source="DBWindow" bind-property="client" bind-flags="sync-create"/>
                          </object>
                        </property>
                        <child>
                          <object class="GtkImage">
                            <style>
                              <class name="icon-dropshadow"/>
                            </style>
                            <property name="pixel-size">28</property>
                            <binding name="icon-name">
                              <lookup name="icon-name">
                                <lookup name="current-selection">
                                  provider_popover
                                </lookup>
                              </lookup>
                            </binding>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child type="end">
                      <object class="GtkMenuButton">
                        <property name="primary">True</property>
                        <property name="icon-name">open-menu-symbolic</property>
                        <property name="menu-model">menubar</property>
                      </object>
                    </child>
                  </object>
                </child>
                <property name="content">
                  <object class="DBSearchPage" id="search_page">
                    <property name="client" bind-source="DBWindow" bind-property="client" bind-flags="sync-create"/>
                    <signal name="details" handler="handle_details" swapped="true"/>
                    <signal name="search" handler="handle_search_page" swapped="true"/>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </property>
        <property name="content">
          <object class="AdwNavigationPage">
            <property name="title">Search Results</property> <!-- not user-facing thus no translatable="yes" -->
            <child>
              <object class="AdwNavigationSplitView" id="result_view">
                <property name="min-sidebar-width">300</property>
                <property name="max-sidebar-width">450</property>
                <property name="sidebar-width-fraction">0.4</property>
                <property name="sidebar">
                  <object class="AdwNavigationPage">
                    <property name="title" translatable="yes">Journeys</property>
                    <child>
                      <object class="AdwToolbarView">
                        <child type="top">
                          <object class="AdwHeaderBar">
                            <child>
                              <object class="GtkButton" id="btn_bookmark_search">
                                <signal name="clicked" handler="handle_searches_store" swapped="true"/>
                                <property name="icon-name">user-bookmarks-symbolic</property>
                                <binding name="visible">
                                  <closure function="is_some" type="gboolean">
                                    <lookup name="journeys-result">
                                        journeys_page
                                    </lookup>
                                  </closure>
                                </binding>
                              </object>
                            </child>
                          </object>
                        </child>
                        <property name="content">
                          <object class="DBJourneysPage" id="journeys_page">
                            <property name="client" bind-source="DBWindow" bind-property="client" bind-flags="sync-create"/>
                            <signal name="select" handler="handle_journeys_page" swapped="true"/>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </property>
                <property name="content">
                  <object class="AdwNavigationPage">
                    <property name="title" translatable="yes">Journey</property>
                    <child>
                      <object class="AdwToolbarView">
                        <property name="width-request">200</property>
                        <child type="top">
                          <object class="AdwHeaderBar">
                            <child>
                              <object class="GtkButton" id="btn_reload_detail">
                                <signal name="clicked" handler="handle_journey_reload" swapped="true"/>
                                <property name="icon-name">view-refresh-symbolic</property>
                                <binding name="visible">
                                  <closure function="is_some" type="gboolean">
                                    <lookup name="journey">
                                        journey_detail_page
                                    </lookup>
                                  </closure>
                                </binding>
                              </object>
                            </child>
                            <child>
                              <object class="GtkButton" id="btn_bookmark">
                                <signal name="clicked" handler="handle_journey_store" swapped="true"/>
                                <property name="icon-name">user-bookmarks-symbolic</property>
                                <binding name="visible">
                                  <closure function="is_some" type="gboolean">
                                    <lookup name="journey">
                                        journey_detail_page
                                    </lookup>
                                  </closure>
                                </binding>
                              </object>
                            </child>
                          </object>
                        </child>
                        <property name="content">
                          <object class="DBJourneyDetailPage" id="journey_detail_page">
                            <property name="client" bind-source="DBWindow" bind-property="client" bind-flags="sync-create"/>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </property>
      </object>
    </child>
  </template>
  <object class="DBJourneysStore" id="store_journeys">
    <signal name="add" handler="handle_journey_store_add" swapped="true"/>
    <signal name="remove" handler="handle_journey_store_remove" swapped="true"/>
  </object>
  <object class="DBSearchesStore" id="store_searches">
    <signal name="add" handler="handle_searches_store_add" swapped="true"/>
    <signal name="remove" handler="handle_searches_store_remove" swapped="true"/>
  </object>
  <menu id="menubar">
    <section>
      <item>
        <attribute name="label" translatable="yes">Preferences</attribute>
        <attribute name="action">win.settings</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">About DieBahn</attribute>
        <attribute name="action">win.about</attribute>
      </item>
    </section>
  </menu>
</interface>
