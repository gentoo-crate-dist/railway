<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>
  <requires lib="libadwaita" version="1.0"/>

  <template class="DBSearchOptionsButton" parent="GtkButton">
    <accessibility>
      <property name="label" translatable="yes">More search options</property>
      <relation name="labelled-by">label_more_options</relation>
      <relation name="described-by">label_extra_options</relation>
    </accessibility>

    <style>
      <class name="card"/>
      <class name="button-card"/>
    </style>

    <signal name="clicked" handler="handle_clicked" swapped="true"/>

    <child>
      <object class="GtkBox">
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">6</property>
            <property name="hexpand">true</property>
            <child>
              <object class="GtkLabel" id="label_more_options">
                <style>
                  <class name="heading"/>
                </style>
                <property name="label" translatable="yes">More Options</property>
                <property name="halign">start</property>
                <property name="margin-top">12</property>
                <property name="margin-start">12</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="label_extra_options">
                <style>
                  <class name="caption"/>
                </style>
                <property name="halign">start</property>
                <property name="margin-bottom">12</property>
                <property name="margin-start">12</property>
                <property name="lines">2</property>
                <property name="ellipsize">end</property>
                <property name="wrap">true</property>
                <binding name="label">
                  <lookup name="extra-label" type="DBSearchOptionsButton"/>
                </binding>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkImage">
            <property name="icon-name">go-next-symbolic</property>
            <property name="margin-end">12</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
