<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>
  <requires lib="libadwaita" version="1.0"/>

  <template class="DBLegItem" parent="GtkGrid">
    <style>
      <class name="card"/>
    </style>
    <property name="orientation">vertical</property>
    <property name="hexpand">TRUE</property>
    <property name="column-spacing">15</property>
    <property name="row-spacing">15</property>
    <child>
      <object class="GtkSeparator">
        <property name="orientation">vertical</property>
        <property name="hexpand">false</property>
        <property name="halign">center</property>
        <property name="valign">fill</property>
        <property name="margin-start">12</property>
        <layout>
          <property name="column">0</property>
          <property name="row">1</property>
          <property name="row-span">3</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="DBAltLabel">
        <layout>
          <property name="column">0</property>
          <property name="column-span">2</property>
          <property name="row">0</property>
        </layout>
        <property name="margin-start">12</property>
        <property name="margin-top">12</property>
        <property name="halign">start</property>
        <binding name="main">
          <lookup name="planned-departure">
            <lookup name="leg" type="DBLegItem">
            </lookup>
          </lookup>
        </binding>
        <binding name="alt">
          <lookup name="departure">
            <lookup name="leg" type="DBLegItem">
            </lookup>
          </lookup>
        </binding>
      </object>
    </child>
    <child>
      <object class="GtkLabel">
        <layout>
          <property name="column">2</property>
          <property name="row">0</property>
          <property name="column-span">3</property>
        </layout>
        <property name="margin-start">12</property>
        <property name="margin-top">12</property>
        <property name="halign">start</property>
        <binding name="label">
          <lookup name="name">
            <lookup name="origin">
              <lookup name="leg" type="DBLegItem">
              </lookup>
            </lookup>
          </lookup>
        </binding>
      </object>
    </child>
    <child>
      <object class="DBAltLabel">
        <property name="halign">GTK_ALIGN_END</property>
        <property name="hexpand">True</property>
        <property name="margin-top">12</property>
        <property name="margin-end">12</property>
        <layout>
          <property name="column">5</property>
          <property name="row">0</property>
        </layout>
        <binding name="main">
          <lookup name="planned-departure-platform">
            <lookup name="leg" type="DBLegItem"/>
          </lookup>
        </binding>
        <binding name="alt">
          <lookup name="departure-platform">
            <lookup name="leg" type="DBLegItem"/>
          </lookup>
        </binding>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <layout>
          <property name="column">1</property>
          <property name="row">2</property>
          <property name="column-span">5</property>
        </layout>
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkExpander" id="expander">
            <property name="margin-end">12</property>
            <child type="label">
              <object class="GtkLabel">
                <property name="halign">start</property>

                <binding name="label">
                  <closure function="concat_and_translate" type="gchararray">
                    <lookup name="name">
                      <lookup name="leg" type="DBLegItem">
                      </lookup>
                    </lookup>
                    <constant type="gchararray">to</constant>
                    <lookup name="direction">
                      <lookup name="leg" type="DBLegItem">
                      </lookup>
                    </lookup>
                  </closure>
                </binding>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="margin-top">12</property>
                <property name="orientation">vertical</property>
                <property name="spacing">25</property>
                <child>
                  <object class="GtkBox" id="box_remarks">
                    <property name="spacing">12</property>
                    <property name="orientation">vertical</property>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="box_stopovers">
                    <property name="spacing">12</property>
                    <property name="orientation">vertical</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="label_num_stopovers">
            <property name="margin-start">15</property>
            <property name="margin-top">15</property>
            <property name="halign">start</property>
            <binding name="visible">
              <closure function="not" type="gboolean">
                <lookup name="expanded">expander</lookup>
              </closure>
            </binding>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="DBAltLabel">
        <layout>
          <property name="column">0</property>
          <property name="column-span">2</property>
          <property name="row">4</property>
        </layout>
        <property name="margin-start">12</property>
        <property name="margin-bottom">12</property>
        <property name="halign">start</property>
        <binding name="main">
          <lookup name="planned-arrival">
            <lookup name="leg" type="DBLegItem">
            </lookup>
          </lookup>
        </binding>
        <binding name="alt">
          <lookup name="arrival">
            <lookup name="leg" type="DBLegItem">
            </lookup>
          </lookup>
        </binding>
      </object>
    </child>
    <child>
      <object class="GtkLabel">
        <layout>
          <property name="column">2</property>
          <property name="row">4</property>
          <property name="column-span">3</property>
        </layout>
        <property name="halign">start</property>
        <property name="margin-start">12</property>
        <property name="margin-bottom">12</property>
        <binding name="label">
          <lookup name="name">
            <lookup name="destination">
              <lookup name="leg" type="DBLegItem">
              </lookup>
            </lookup>
          </lookup>
        </binding>
      </object>
    </child>
    <child>
      <object class="DBAltLabel">
        <layout>
          <property name="column">5</property>
          <property name="row">4</property>
        </layout>
        <property name="halign">GTK_ALIGN_END</property>
        <property name="hexpand">True</property>
        <property name="margin-end">12</property>
        <property name="margin-bottom">12</property>
        <binding name="main">
          <lookup name="planned-arrival-platform">
            <lookup name="leg" type="DBLegItem"/>
          </lookup>
        </binding>
        <binding name="alt">
          <lookup name="arrival-platform">
            <lookup name="leg" type="DBLegItem"/>
          </lookup>
        </binding>
      </object>
    </child>
    <child>
      <object class="GtkExpander">
        <property name="visible">false</property>
        <property name="margin-end">12</property>
        <layout>
          <property name="column">0</property>
          <property name="row">6</property>
          <property name="column-span">5</property>
        </layout>

        <child type="label">
          <object class="GtkLabel">
            <property name="label" translatable="yes">Remarks</property>
          </object>
        </child>
        <child>
        </child>
      </object>
    </child>
  </template>
</interface>
