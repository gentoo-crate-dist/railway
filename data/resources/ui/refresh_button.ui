<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>
  <requires lib="libadwaita" version="1.0"/>

  <template class="DBRefreshButton" parent="AdwBin">
    <child>
      <object class="GtkStack" id="stack">
        <property name="transition-type">crossfade</property>

        <child>
          <object class="GtkStackPage" id="page_button">
            <property name="name">button</property>
            <property name="title">button</property>
            <property name="child">
              <object class="GtkButton">
                <style>
                  <!-- XXX: Make configurable -->
                  <class name="flat"/>
                </style>
                <signal name="clicked" handler="handle_refresh_clicked" swapped="true"/>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">view-refresh-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Refresh Trip</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="GtkStackPage" id="page_spinner">
            <property name="name">spinner</property>
            <property name="title">spinner</property>
            <property name="child">
              <object class="GtkSpinner">
                <property name="spinning">true</property>
                <property name="halign">center</property>
                <property name="valign">center</property>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
