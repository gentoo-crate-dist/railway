<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="DBJourneyListItem" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="spacing">6</property>

    <property name="margin-top">12</property>
    <property name="margin-bottom">12</property>
    <property name="margin-start">12</property>
    <property name="margin-end">12</property>

    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>

        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="hexpand">True</property>

            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <child>
                  <object class="DBAltLabel" id="from_time">
                    <binding name="main">
                      <lookup name="planned-departure">
                        <lookup name="first-leg">
                          <lookup name="journey" type="DBJourneyListItem"/>
                        </lookup>
                      </lookup>
                    </binding>
                    <binding name="alt">
                      <lookup name="departure">
                        <lookup name="first-leg">
                          <lookup name="journey" type="DBJourneyListItem"/>
                        </lookup>
                      </lookup>
                    </binding>
                  </object>
                </child>
                <child>
                  <object class="GtkSeparator">
                    <property name="hexpand">True</property>
                    <property name="valign">center</property>
                    <property name="margin-start">12</property>
                    <property name="margin-end">6</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <style>
                      <class name="caption"/>
                    </style>
                    <binding name="label">
                      <lookup name="total-time">
                        <lookup name="journey" type="DBJourneyListItem"/>
                      </lookup>
                    </binding>
                  </object>
                </child>
                <child>
                  <object class="GtkSeparator">
                    <property name="hexpand">True</property>
                    <property name="valign">center</property>
                    <property name="margin-start">6</property>
                    <property name="margin-end">12</property>
                  </object>
                </child>>
              </object>
            </child>

            <child>
              <object class="GtkLabel">
                <style>
                  <class name="caption"/>
                </style>
                <property name="halign">start</property>
                <property name="hexpand">true</property>
                <property name="margin-end">12</property>
                <property name="ellipsize">end</property>
                <binding name="label">
                  <lookup name="name">
                    <lookup name="origin">
                      <lookup name="first-leg">
                        <lookup name="journey" type="DBJourneyListItem"/>
                      </lookup>
                    </lookup>
                  </lookup>
                </binding>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="GtkBox" id="destination_box">
            <property name="orientation">vertical</property>
            <property name="halign">end</property>
            <property name="hexpand">False</property>
            <child>
              <object class="DBAltLabel" id="to_time">
                <binding name="main">
                  <lookup name="planned-arrival">
                    <lookup name="last-leg">
                      <lookup name="journey" type="DBJourneyListItem"/>
                    </lookup>
                  </lookup>
                </binding>
                <binding name="alt">
                  <lookup name="arrival">
                    <lookup name="last-leg">
                      <lookup name="journey" type="DBJourneyListItem"/>
                    </lookup>
                  </lookup>
                </binding>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <style>
                  <class name="caption"/>
                </style>
                <property name="halign">start</property>
                <property name="ellipsize">end</property>
                <binding name="label">
                  <lookup name="name">
                    <lookup name="destination">
                      <lookup name="last-leg">
                        <lookup name="journey" type="DBJourneyListItem"/>
                      </lookup>
                    </lookup>
                  </lookup>
                </binding>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <property name="spacing">12</property>

        <child>
          <object class="DBIndicatorIcons">
            <binding name="load-factor">
              <lookup name="load-factor">
                <lookup name="journey" type="DBJourneyListItem"/>
              </lookup>
            </binding>
            <binding name="late-factor">
              <lookup name="late-factor">
                <lookup name="journey" type="DBJourneyListItem"/>
              </lookup>
            </binding>
            <binding name="change-platform">
              <lookup name="change-platform">
                <lookup name="journey" type="DBJourneyListItem"/>
              </lookup>
            </binding>
            <binding name="is-unreachable">
              <lookup name="is-unreachable">
                <lookup name="journey" type="DBJourneyListItem"/>
              </lookup>
            </binding>
            <binding name="is-cancelled">
              <lookup name="is-cancelled">
                <lookup name="journey" type="DBJourneyListItem"/>
              </lookup>
            </binding>
          </object>
        </child>

        <child>
          <object class="GtkLabel">
            <style>
              <class name="dim-label"/>
              <class name="caption"/>
            </style>
            <property name="ellipsize">end</property>
            <property name="halign">start</property>
            <property name="hexpand">True</property>
            <binding name="label">
              <lookup name="types">
                <lookup name="journey" type="DBJourneyListItem"/>
              </lookup>
            </binding>
          </object>
        </child>

        <child>
          <object class="GtkLabel">
            <property name="halign">end</property>
            <binding name="label">
              <lookup name="price">
                <lookup name="journey" type="DBJourneyListItem"/>
              </lookup>
            </binding>
          </object>
        </child>
      </object>
    </child>

    <object class="GtkSizeGroup">
      <property name="mode">vertical</property>
      <widgets>
        <widget name="from_time"/>
        <widget name="to_time"/>
      </widgets>
    </object>
  </template>
</interface>
