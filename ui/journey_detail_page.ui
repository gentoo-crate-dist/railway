<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>
  <requires lib="libadwaita" version="1.0"/>

  <template class="DBJourneyDetailPage" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="spacing">8</property>
    <property name="vexpand">TRUE</property>
    <property name="valign">GTK_ALIGN_FILL</property>
    <property name="hexpand">TRUE</property>
    <property name="halign">GTK_ALIGN_FILL</property>

    <child>
      <object class="AdwToastOverlay" id="toast_errors">
        <child>
          <object class="GtkScrolledWindow">
            <property name="hscrollbar-policy">GTK_POLICY_NEVER</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">8</property>
                <property name="vexpand">TRUE</property>
                <property name="valign">GTK_ALIGN_FILL</property>
                <property name="hexpand">TRUE</property>
                <property name="halign">GTK_ALIGN_FILL</property>

                <child>
                  <object class="GtkLabel">
                    <binding name="label">
                      <closure function="concat_and_translate" type="gchararray">
                        <constant type="gchararray">Transitions</constant>
                        <closure function="u32_to_string" type="gchararray">
                          <lookup name="transitions">
                            <lookup name="journey" type="DBJourneyDetailPage"/>
                          </lookup>
                        </closure>
                      </closure>
                    </binding>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <binding name="label">
                      <closure function="concat_and_translate" type="gchararray">
                        <constant type="gchararray">Time</constant>
                        <lookup name="total-time">
                          <lookup name="journey" type="DBJourneyDetailPage"/>
                        </lookup>
                      </closure>
                    </binding>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="box_legs">
                    <property name="orientation">vertical</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>

  </template>
</interface>
