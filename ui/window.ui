<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>
  <requires lib="libadwaita" version="1.0"/>

  <template class="DBWindow" parent="AdwApplicationWindow">
    <property name="can-focus">True</property>
    <property name="title">DieBahn</property>
    <property name="default-height">800</property>
    <property name="default-width">500</property>

    <child>
      <object class="AdwLeaflet" id="leaflet">
        <property name="can-navigate-back">True</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
              <object class="AdwHeaderBar">
                <binding name="show-end-title-buttons">
                  <lookup name="folded">leaflet</lookup>
                </binding>
                <property name="title-widget">
                  <object class="AdwWindowTitle">
                    <property name="title" translatable="yes">Search</property>
                  </object>
                </property>
              </object>
            </child>

            <child>
              <object class="DBSearchPage" id="search_page">
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwLeafletPage">
            <property name="navigatable">False</property>
            <property name="child">
              <object class="GtkSeparator"/>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="hexpand">True</property>>
            <child>
              <object class="AdwHeaderBar">
                <property name="show-start-title-buttons">False</property>
                <property name="show-end-title-buttons">False</property>
                <child>
                  <object class="GtkButton" id="btn_go_back">
                    <binding name="visible">
                      <lookup name="folded">leaflet</lookup>
                    </binding>
                    <property name="icon-name">go-previous-symbolic</property>
                  </object>
                </child>
                <property name="title-widget">
                  <object class="AdwWindowTitle">
                    <property name="title" translatable="yes">Journeys</property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="DBJourneysPage" id="journeys_page">
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwLeafletPage">
            <property name="navigatable">False</property>
            <property name="child">
              <object class="GtkSeparator"/>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="hexpand">True</property>>
            <child>
              <object class="AdwHeaderBar">
                <binding name="show-start-title-buttons">
                  <lookup name="folded">leaflet</lookup>
                </binding>
                <child>
                  <object class="GtkButton" id="btn_go_back_2">
                    <binding name="visible">
                      <lookup name="folded">leaflet</lookup>
                    </binding>
                    <property name="icon-name">go-previous-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="btn_reload_detail">
                    <property name="icon-name">view-refresh-symbolic</property>
                  </object>
                </child>
                <property name="title-widget">
                  <object class="AdwWindowTitle">
                    <property name="title" translatable="yes">Journey</property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="DBJourneyDetailPage" id="journey_detail_page">
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
